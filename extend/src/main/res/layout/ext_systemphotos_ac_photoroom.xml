<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/ext_systemphotos_theme_top"
        android:id="@+id/title"
        ></include>

    <GridView
        android:layout_above="@+id/ac_btn_perfrom"
        android:layout_below="@+id/title"
        android:horizontalSpacing="@dimen/width2"
        android:verticalSpacing="@dimen/height2"
        android:numColumns="4"
        android:id="@+id/ac_imgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:textSize="@dimen/width16"
        android:paddingRight="@dimen/width20"
        android:gravity="center_vertical|right"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:id="@+id/ac_btn_perfrom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#333333"
        android:background="#ffffff"
        />
</RelativeLayout>